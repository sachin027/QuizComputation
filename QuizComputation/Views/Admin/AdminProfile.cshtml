@model QuizComputation.Model.CustomModel.AdminModel

@{
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2 class="mt-2">Profile</h2>

<form method="post">

    <div class="form-horizontal">
        <hr />

        <input value="@Model.Admin_Id" name="Admin_Id" hidden/>

        <div class="form-group">
            <label>Admin Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Email Id</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin_Email_Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin_Email_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin_password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.Admin_password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <div class="col-md-10">
                <input value="@Model.Admin_password" type="password" name="Confirm_password" class="form-control"/>
                
                @Html.ValidationMessageFor(model => model.Confirm_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submit" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "AdminDashboard")
</div>
